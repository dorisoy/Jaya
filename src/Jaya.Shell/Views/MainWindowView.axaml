<Window
    x:Class="Jaya.Shell.Views.MainWindowView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:v="using:Jaya.Shell.Views"
    Title="Jaya"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid ColumnDefinitions="Auto,Auto,*,Auto,Auto" RowDefinitions="Auto,Auto,*,Auto">
        <v:ToolBarView Grid.ColumnSpan="5" />
        <v:AddressBarView Grid.Row="1" Grid.ColumnSpan="5" />
        <v:NavigationPaneView Grid.Row="2" />
        <GridSplitter
            Grid.Row="2"
            Grid.Column="1"
            ResizeDirection="Columns" />
        <GridSplitter
            Grid.Row="2"
            Grid.Column="3"
            ResizeDirection="Columns" />
        <v:DetailsPaneView Grid.Row="2" Grid.Column="4" />
        <v:PreviewPaneView
            Grid.Row="2"
            Grid.Column="4"
            IsVisible="False" />
        <v:StatusBarView Grid.Row="3" Grid.ColumnSpan="5" />
    </Grid>
</Window>
